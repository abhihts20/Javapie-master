<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background"
    tools:context=".SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/login_back"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Welcome to JAVAPIE!!"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Register yourself to be a part of this club"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/signup_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edt_back"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/colorApp"
            android:hint="Name"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#4885ED"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/signup_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/edt_back"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="5dp"
            android:hint="University email address"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#4885ED"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/signup_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/edt_back"
            android:drawableStart="@drawable/ic_local_phone_black_24dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/colorApp"
            android:hint="Mobile Number"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="#4885ED"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/signup_roll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/edt_back"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/colorApp"
            android:hint="University Roll Number"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="#4885ED"
            android:textColorHint="#000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:layout_gravity=""
                android:id="@+id/signup_course"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/edt_back"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorApp"
                android:hint="Course"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#4885ED"
                android:textColorHint="#000000" />
            <EditText

            android:id="@+id/signup_branch"
            android:layout_width="0dp"
                android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/edt_back"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/colorApp"
            android:hint="Branch"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#4885ED"
            android:textColorHint="#000000" />
        </LinearLayout>

        <EditText
            android:id="@+id/signup_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/edt_back"
            android:drawableStart="@drawable/ic_key"
            android:drawablePadding="5dp"
            android:hint="Password"
            android:inputType="textWebPassword"
            android:padding="10dp"
            android:textColor="#4885ED"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/signup_conpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/edt_back"
            android:drawableStart="@drawable/ic_key"
            android:drawablePadding="5dp"
            android:hint="Confirm Password"
            android:inputType="textWebPassword"
            android:padding="10dp"
            android:textColor="#4885ED"
            android:textColorHint="#000000" />

        <Button
            android:id="@+id/log_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_back"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:drawablePadding="7dp"
            android:gravity="center"
            android:text="Submit"
            android:textColor="#ffffff" />

    </LinearLayout>
</ScrollView>